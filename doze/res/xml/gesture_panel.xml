<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="ambient_display_key"
        android:title="Ambient Display">

        <SwitchPreference
            android:key="doze_enabled"
            android:defaultValue="true"
            android:title="Ambient Display"
            android:summary="Ambient Display" />

        <SwitchPreference
            android:key="gesture_hand_wave"
            android:defaultValue="false"
            android:title="Hand Gesture"
            android:summary="Hand Gesture"
            android:dependency="doze_enabled" />

        <SwitchPreference
            android:key="gesture_pocket"
            android:defaultValue="false"
            android:title="Pocket Gesture"
            android:summary="Pocket Gesture"
            android:dependency="doze_enabled" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="proximity_wake_key"
        android:title="Proximity Wake">

        <SwitchPreference
            android:key="proximity_wake_enable"
            android:defaultValue="false"
            android:title="Proximity Wake Enabled"
            android:summary="Proximity Wake Enabled" />
    </PreferenceCategory>

</PreferenceScreen>
